<%- include('../../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../../includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="/admin/rooms/<% if (editing) { %>editAction<% } else { %>addAction<% } %>" method="POST">
            <div class="form-control">
                <label for="name">Name</label>
                <input type="text" name="name" id="name" value="<% if (editing) { %><%= room.name %><% } %>">
            </div>
            <div class="form-control">
                <label for="desc">Description</label>
                <textarea name="desc" id="desc" rows="5"><% if (editing) { %><%= room.desc %><% } %></textarea>
            </div>
            <div class="form-control">
                <label for="desc">Status</label>
                <select name="status" id="status" >
                    <option value="Active">Active</option>
                    <option value="Inactive">Inactive</option>
                </select>
            </div>
            <% if (editing) { %>
                <input type="hidden" value="<%= room.id %>" name="roomId">
            <% } %>

            <button class="btn" type="submit"><% if (editing) { %>Update Product<% } else { %>Add Product<% } %></button>
        </form>
    </main>
<%- include('../../includes/end.ejs') %>